{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@actions/*": ["app/app-state/actions/*"],
      "@reducers/*": ["app/app-state/reducers/*"],
      "@models/*": ["app/models/*"],
      "@services/*": ["app/services/*"],
      "@shared/*": ["app/shared/*"]
    }
  }
}
